@{
}

@{
    ViewData["Title"] = "Category Page";
    
}
@model IEnumerable<ASPMVCApp.Models.Category>


<div class="text-center">
    <h1 class="display-4">Category</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">Category</a>.</p>
    <a asp-controller="Category" asp-action="Create">Create New Category</a>
</div>
<div>
    <table>
        @foreach (var obj in Model)
        {
        <tr>
            <td>@obj.Name</td>

            <td>@obj.Id</td>

            <td>@obj.DisplayOrder</td>
            <td><a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit">Edit</a></td>
            <td><a asp-controller="Category" asp-route-Id="@obj.Id"  asp-action="Delete">Delete</a></td>

        </tr>
            ;
        }
    </table>
</div>
